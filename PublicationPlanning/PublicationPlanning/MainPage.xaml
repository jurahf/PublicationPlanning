<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PublicationPlanning.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Publication planning" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout Orientation="Horizontal">
            <Button Text="Добавить фото" Clicked="btnAddPhoto_Clicked" BackgroundColor="DarkSeaGreen"></Button>
            <Button x:Name="btnToLeft" Text="Влево" Clicked="btnToLeft_Clicked" IsEnabled="False"></Button>
            <Button x:Name="btnToRight" Text="Вправо" Clicked="btnToRight_Clicked" IsEnabled="False"></Button>
            <Button Text="Обновить" Clicked="btnRefresh_Clicked"></Button>
        </StackLayout>

        <ScrollView Orientation="Vertical">            
            <FlexLayout x:Name="flexLayout"
                        Wrap="Wrap" 
                        JustifyContent="Start" 
                        FlexLayout.Grow="1"
                        AlignItems="Center">
            </FlexLayout>
        </ScrollView>

        <ActivityIndicator x:Name="activityIndicator"
                           IsRunning="False"
                           VerticalOptions="Center"
                           IsVisible="False" />
    </StackLayout>

</ContentPage>
